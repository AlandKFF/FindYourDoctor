<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <!-- Dashboard Header -->
  <div class="px-4 sm:px-0 mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
    <p class="mt-2 text-sm text-gray-700">
      Welcome back, <%= user.name %>. Here's an overview of your system.
    </p>
  </div>

  <!-- Stats Overview -->
  <div class="mt-4 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
    <!-- Users Stats -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-blue-500 rounded-md p-3">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
              <dd>
                <div class="text-lg font-medium text-gray-900"><%= stats.userCount %></div>
              </dd>
            </dl>
          </div>
        </div>
        <div class="mt-4">
          <div class="flex justify-between">
            <div class="text-sm font-medium text-gray-500">Pending Approval</div>
            <div class="text-sm font-medium text-yellow-500"><%= stats.pendingUserCount %></div>
          </div>
          <a href="/users" class="mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200">
            Manage Users
          </a>
        </div>
      </div>
    </div>

    <!-- Hospitals Stats -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Hospitals</dt>
              <dd>
                <div class="text-lg font-medium text-gray-900"><%= stats.hospitalCount %></div>
              </dd>
            </dl>
          </div>
        </div>
        <div class="mt-4">
          <div class="flex justify-between">
            <div class="text-sm font-medium text-gray-500">Pending Approval</div>
            <div class="text-sm font-medium text-yellow-500"><%= stats.pendingHospitalCount %></div>
          </div>
          <a href="/hospitals" class="mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200">
            Manage Hospitals
          </a>
        </div>
      </div>
    </div>

    <!-- Doctors Stats -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-purple-500 rounded-md p-3">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Doctors</dt>
              <dd>
                <div class="text-lg font-medium text-gray-900"><%= stats.doctorCount %></div>
              </dd>
            </dl>
          </div>
        </div>
        <div class="mt-4">
          <a href="/doctors" class="mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-purple-700 bg-purple-100 hover:bg-purple-200">
            Manage Doctors
          </a>
        </div>
      </div>
    </div>

    <!-- Contact Reports -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-red-500 rounded-md p-3">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Contact Reports</dt>
              <dd>
                <div class="text-lg font-medium text-gray-900"><%= stats.contactReportCount %></div>
              </dd>
            </dl>
          </div>
        </div>
        <div class="mt-4">
          <a href="/contact/reports" class="mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200">
            View Reports
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity Section -->
  <div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2">
    <!-- Pending User Approvals -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Pending User Approvals</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Users waiting for account approval</p>
      </div>
      <div class="border-t border-gray-200">
        <div class="px-4 py-5 sm:p-6">
          <% if (pendingUsers && pendingUsers.length > 0) { %>
            <ul class="divide-y divide-gray-200">
              <% pendingUsers.forEach(user => { %>
                <li class="py-4">
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="text-sm font-medium text-gray-900"><%= user.first_name %> <%= user.last_name %></p>
                      <p class="text-sm text-gray-500"><%= user.email %> - <%= user.role %></p>
                    </div>
                    <div>
                      <form action="/users/<%= user.user_id %>/status" method="POST" class="inline">
                        <input type="hidden" name="status" value="accept">
                        <button type="submit" class="inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-green-700 bg-green-100 hover:bg-green-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                          Approve
                        </button>
                      </form>
                      <form action="/users/<%= user.user_id %>/status" method="POST" class="inline ml-2">
                        <input type="hidden" name="status" value="reject">
                        <button type="submit" class="inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                          Reject
                        </button>
                      </form>
                    </div>
                  </div>
                </li>
              <% }) %>
            </ul>
            <div class="mt-4 text-right">
              <a href="/users" class="text-sm font-medium text-blue-600 hover:text-blue-500">View all users →</a>
            </div>
          <% } else { %>
            <p class="text-sm text-gray-500">No pending user approvals</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Recent Contact Reports -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Contact Reports</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Latest messages from the contact form</p>
      </div>
      <div class="border-t border-gray-200">
        <div class="px-4 py-5 sm:p-6">
          <% if (recentReports && recentReports.length > 0) { %>
            <ul class="divide-y divide-gray-200">
              <% recentReports.forEach(report => { %>
                <li class="py-4">
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= report.name %></p>
                    <p class="text-sm text-gray-500"><%= report.contact_info %></p>
                    <p class="mt-2 text-sm text-gray-600 line-clamp-2"><%= report.message.substring(0, 100) %><%= report.message.length > 100 ? '...' : '' %></p>
                    <p class="mt-1 text-xs text-gray-400"><%= new Date(report.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                  </div>
                </li>
              <% }) %>
            </ul>
            <div class="mt-4 text-right">
              <a href="/contact/reports" class="text-sm font-medium text-blue-600 hover:text-blue-500">View all reports →</a>
            </div>
          <% } else { %>
            <p class="text-sm text-gray-500">No recent contact reports</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-8 bg-white overflow-hidden shadow rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Quick Actions</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Common administrative tasks</p>
    </div>
    <div class="border-t border-gray-200">
      <div class="px-4 py-5 sm:p-6">
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
          <a href="/hospitals/newhospitals" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Add New Hospital
          </a>
          <a href="/doctors/create" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Add New Doctor
          </a>
          <a href="/hospitals/requests" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            Hospital Requests
          </a>
          <a href="/users" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            Manage Users
          </a>
        </div>
      </div>
    </div>
  </div>
</div>