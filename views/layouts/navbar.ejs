<!-- Enhanced Navbar with better styling and animations -->
<nav class="bg-white border-b border-gray-200 shadow-sm fixed w-full top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo Section -->
            <div class="flex-shrink-0 flex items-center">
                <a href="/" class="flex items-center group">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-2 text-blue-600 group-hover:text-blue-700 transition-colors duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm0 4a1 1 0 00-1 1v4H7a1 1 0 100 2h4v4a1 1 0 102 0v-4h4a1 1 0 100-2h-4V7a1 1 0 00-1-1z" />
                    </svg>
                    <span class="text-gray-900 font-bold text-lg group-hover:text-blue-600 transition-colors duration-200">Find Your Doctor</span>
                </a>
            </div>
            
            <!-- Desktop Menu -->
            <div class="hidden md:flex items-center space-x-1">
                <a href="/doctors" class="px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-50 transition-all duration-200">Doctors</a>
                <a href="/hospitals" class="px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-50 transition-all duration-200">Hospitals</a>
                <a href="/about" class="px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-50 transition-all duration-200">About</a>
                <a href="/contact" class="px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-50 transition-all duration-200">Contact</a>
                
                <% if (locals.loggedInUserId) { %>
                    <div class="relative ml-3 group">
                        <a href="/users/getprofile" class="px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-50 transition-all duration-200">Profile</a>
                        <% if(locals.isAdmin){ %>
                            <div class="absolute right-0 w-48 mt-2 py-2 bg-white rounded-md shadow-lg hidden group-hover:block">
                                <a href="/users" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Users</a>
                                <a href="/contact/reports" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Reports</a>
                                <a href="/hospitals/requests" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Requests</a>
                                <a href="/hospitals/newhospitals" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">New Hospital</a>
                            </div>
                        <% } %>
                    </div>
                    <a href="/auth/logout" class="ml-4 px-4 py-2 rounded-md bg-red-500 text-white hover:bg-red-600 transition-colors duration-200">Logout</a>
                <% } else { %>
                    <a href="/auth/" class="ml-4 px-4 py-2 rounded-md bg-blue-600 text-white hover:bg-blue-700 transition-colors duration-200">Join Us</a>
                <% } %>
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden">
                <button id="menu-toggle" class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-600">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path class="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden">
            <div class="px-2 pt-2 pb-3 space-y-1 bg-gray-50 rounded-md mt-2">
                <a href="/doctors" class="block px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 transition-all duration-200">Doctors</a>
                <a href="/hospitals" class="block px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 transition-all duration-200">Hospitals</a>
                <a href="/about" class="block px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 transition-all duration-200">About</a>
                <a href="/contact" class="block px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 transition-all duration-200">Contact</a>
                
                <% if (locals.loggedInUserId) { %>
                    <a href="/users/getprofile" class="block px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 transition-all duration-200">Profile</a>
                    <% if(locals.isAdmin){ %>
                        <div class="border-t border-gray-200 mt-2 pt-2">
                            <p class="px-3 py-2 text-sm font-medium text-gray-500">Admin</p>
                            <a href="/users" class="block px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 transition-all duration-200">Users</a>
                            <a href="/contact/reports" class="block px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 transition-all duration-200">Reports</a>
                            <a href="/hospitals/requests" class="block px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 transition-all duration-200">Requests</a>
                            <a href="/hospitals/newhospitals" class="block px-3 py-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100 transition-all duration-200">New Hospital</a>
                        </div>
                    <% } %>
                    <a href="/auth/logout" class="block px-3 py-2 mt-2 text-center rounded-md bg-red-500 text-white hover:bg-red-600 transition-colors duration-200">Logout</a>
                <% } else { %>
                    <a href="/auth/" class="block px-3 py-2 mt-2 text-center rounded-md bg-blue-600 text-white hover:bg-blue-700 transition-colors duration-200">Join Us</a>
                <% } %>
            </div>
        </div>
    </div>
</nav>

<script>
    // Enhanced mobile menu toggle with smooth animation
    document.addEventListener('DOMContentLoaded', function() {
        const menuToggle = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = menuToggle.querySelector('.menu-icon');
        
        menuToggle.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
            
            // Animate the menu icon
            if (mobileMenu.classList.contains('hidden')) {
                menuIcon.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
            } else {
                menuIcon.setAttribute('d', 'M6 18L18 6M6 6l12 12');
            }
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const isClickInside = menuToggle.contains(event.target) || mobileMenu.contains(event.target);
            
            if (!isClickInside && !mobileMenu.classList.contains('hidden')) {
                mobileMenu.classList.add('hidden');
                menuIcon.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
            }
        });
    });
</script>