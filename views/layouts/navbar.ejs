<!-- Add spacing to prevent content from being hidden under the fixed navbar -->
<div class="h-16"></div>

<script>
  // Enhanced mobile menu toggle with smooth animation
  document.addEventListener('DOMContentLoaded', function() {
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuOpenIcon = document.getElementById('menu-open-icon');
    const menuCloseIcon = document.getElementById('menu-close-icon');

    // Function to toggle mobile menu with animation
    function toggleMobileMenu() {
      const isOpen = !mobileMenu.classList.contains('hidden');
      
      if (isOpen) {
        // Close menu
        mobileMenu.style.maxHeight = '0';
        setTimeout(() => {
          mobileMenu.classList.add('hidden');
          menuOpenIcon.classList.remove('hidden');
          menuCloseIcon.classList.add('hidden');
          menuToggle.setAttribute('aria-expanded', 'false');
        }, 300);
      } else {
        // Open menu
        mobileMenu.classList.remove('hidden');
        menuOpenIcon.classList.add('hidden');
        menuCloseIcon.classList.remove('hidden');
        menuToggle.setAttribute('aria-expanded', 'true');
        mobileMenu.style.maxHeight = mobileMenu.scrollHeight + 'px';
      }
    }

    menuToggle.addEventListener('click', function(event) {
      event.stopPropagation();
      toggleMobileMenu();
    });

    // Close mobile menu when clicking outside
    document.addEventListener('click', function(event) {
      const isClickInside = menuToggle.contains(event.target) || mobileMenu.contains(event.target);
      if (!isClickInside && !mobileMenu.classList.contains('hidden')) {
        toggleMobileMenu();
      }
    });

    // Handle window resize for responsive behavior
    window.addEventListener('resize', function() {
      if (window.innerWidth >= 768 && !mobileMenu.classList.contains('hidden')) {
        mobileMenu.classList.add('hidden');
        menuOpenIcon.classList.remove('hidden');
        menuCloseIcon.classList.add('hidden');
        menuToggle.setAttribute('aria-expanded', 'false');
      }
    });

    // Admin dropdown toggle for desktop with arrow rotation
    const adminDropdownToggle = document.getElementById('adminDropdownToggle');
    const adminDropdown = document.getElementById('adminDropdown');
    const dropdownArrow = document.getElementById('dropdownArrow');

    if (adminDropdownToggle && adminDropdown) {
      adminDropdownToggle.addEventListener('click', function(event) {
        event.stopPropagation();
        const isOpen = !adminDropdown.classList.contains('hidden');
        
        // Toggle dropdown
        adminDropdown.classList.toggle('hidden');
        dropdownArrow.classList.toggle('rotate-180');
        adminDropdownToggle.setAttribute('aria-expanded', !isOpen);
        
        // Focus trap for keyboard navigation
        if (!isOpen) {
          const focusableElements = adminDropdown.querySelectorAll('a, button');
          if (focusableElements.length > 0) {
            setTimeout(() => focusableElements[0].focus(), 100);
          }
        }
      });

      // Close admin dropdown when clicking outside
      document.addEventListener('click', function(event) {
        if (!adminDropdown.contains(event.target) && !adminDropdownToggle.contains(event.target)) {
          adminDropdown.classList.add('hidden');
          dropdownArrow.classList.remove('rotate-180');
          adminDropdownToggle.setAttribute('aria-expanded', 'false');
        }
      });

      // Keyboard navigation for dropdown
      adminDropdown.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
          adminDropdown.classList.add('hidden');
          dropdownArrow.classList.remove('rotate-180');
          adminDropdownToggle.setAttribute('aria-expanded', 'false');
          adminDropdownToggle.focus();
        }
      });
    }
    
    // Add keyboard navigation support
    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape' && !mobileMenu.classList.contains('hidden')) {
        toggleMobileMenu();
      }
    });
  });
</script>
