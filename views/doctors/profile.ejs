<div class="max-w-7xl mx-auto">
    <!-- Doctor Header -->
    <div class="relative h-64 rounded-xl overflow-hidden mb-8">
        <div class="absolute inset-0 bg-gradient-to-r from-primary-600 to-primary-800"></div>
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
        <div class="absolute bottom-0 left-0 right-0 p-8">
            <div class="flex items-center space-x-6">
                <img src="<%= doctor.image_url || 'https://via.placeholder.com/150x150' %>" 
                     alt="<%= doctor.first_name %> <%= doctor.last_name %>"
                     class="w-32 h-32 rounded-full border-4 border-white shadow-lg">
                <div>
                    <h1 class="text-4xl font-bold text-white">
                        Dr. <%= doctor.first_name %> <%= doctor.last_name %>
                    </h1>
                    <p class="text-primary-200 text-xl mt-2"><%= doctor.title %></p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Left Sidebar -->
        <div class="space-y-6">
            <!-- Experience Card -->
            <div class="card p-6">
                <h3 class="text-xl font-semibold mb-4">Experience</h3>
                <div class="flex items-center space-x-4">
                    <div class="p-3 bg-primary-100 rounded-full">
                        <i class="fas fa-briefcase text-primary-600 text-xl"></i>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-gray-900">
                            <%= new Date().getFullYear() - doctor.year_starting_work %>
                        </p>
                        <p class="text-gray-600">Years of Practice</p>
                    </div>
                </div>
            </div>

            <!-- Certifications -->
            <div class="card p-6">
                <h3 class="text-xl font-semibold mb-4">Certifications</h3>
                <div class="space-y-4">
                    <% doctor.Doctor_Certifications.forEach(cert => { %>
                        <div class="p-4 bg-gray-50 rounded-lg border border-gray-100">
                            <h4 class="font-semibold text-gray-900">
                                <%= cert.certification_name %>
                            </h4>
                            <p class="text-gray-600 mt-1">
                                <%= cert.awarding_institution %>
                            </p>
                            <p class="text-sm text-gray-500 mt-2">
                                Awarded: <%= new Date(cert.awarded_date).toLocaleDateString() %>
                            </p>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="md:col-span-2 space-y-8">
            <!-- About Section -->
            <div class="card p-6">
                <h2 class="text-2xl font-semibold mb-4">About</h2>
                <p class="text-gray-700 leading-relaxed">
                    <%= doctor.bio %>
                </p>
            </div>

            <!-- Hospital Affiliations -->
            <div class="card p-6">
                <h2 class="text-2xl font-semibold mb-6">Hospital Affiliations</h2>
                <div class="space-y-6">
                    <% doctor.Hospitals.forEach(hospital => { %>
                        <div class="border-b border-gray-200 last:border-0 pb-6 last:pb-0">
                            <div class="flex items-start space-x-4">
                                <div class="p-3 bg-gray-100 rounded-lg">
                                    <i class="fas fa-hospital text-primary-600 text-xl"></i>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-xl font-medium">
                                        <a href="/hospital/<%= hospital.hospital_id %>" 
                                           class="text-primary-600 hover:text-primary-800">
                                            <%= hospital.name %>
                                        </a>
                                    </h3>
                                    <p class="text-gray-600 mt-1">
                                        <%= hospital.Village.City.Country.name %>, 
                                        <%= hospital.Village.City.name %>, 
                                        <%= hospital.Village.name %>
                                    </p>
                                    <div class="flex items-center mt-3 text-sm text-gray-500">
                                        <i class="fas fa-clock mr-2"></i>
                                        Available: 
                                        <span class="font-medium ml-1">
                                            <%= hospital.Doctor_Hospital.available_from %> - 
                                            <%= hospital.Doctor_Hospital.available_until %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>