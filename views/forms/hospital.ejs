<div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Add New Hospital</h1>
                <p class="mt-2 text-gray-600">Enter the hospital's information below</p>
            </div>
            <button type="button" onclick="window.history.back()" class="text-gray-600 hover:text-gray-900">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        
        <form action="/form/hospital" method="POST" class="space-y-8">
            <!-- Basic Information -->
            <div class="bg-gray-50 rounded-xl p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">
                    <i class="fas fa-hospital mr-2 text-primary-600"></i>Basic Information
                </h2>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Hospital Name</label>
                    <input type="text" name="name" required class="input-field">
                </div>

                <div class="mt-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Summary</label>
                    <textarea name="summary" rows="4" class="input-field"></textarea>
                </div>

                <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Opening Time</label>
                        <input type="time" name="open_at" class="input-field">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Closing Time</label>
                        <input type="time" name="close_at" class="input-field">
                    </div>
                </div>
            </div>

            <!-- Location Information -->
            <div class="bg-gray-50 rounded-xl p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">
                    <i class="fas fa-map-marker-alt mr-2 text-primary-600"></i>Location Information
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Country</label>
                        <input type="text" name="country_name" required class="input-field">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">City</label>
                        <input type="text" name="city_name" required class="input-field">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Village/Area</label>
                        <input type="text" name="village_name" required class="input-field">
                    </div>
                </div>

                <div class="mt-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Full Address</label>
                    <input type="text" name="address" class="input-field">
                </div>
            </div>

            <!-- Contact Information -->
            <div class="bg-gray-50 rounded-xl p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">
                    <i class="fas fa-phone mr-2 text-primary-600"></i>Contact Information
                </h2>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Phone Numbers (comma-separated)</label>
                    <input type="text" name="phone_numbers" placeholder="123-456-7890, 098-765-4321" class="input-field">
                </div>

                <div class="mt-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Contact Email</label>
                    <input type="email" name="contact_email" class="input-field">
                </div>

                <div class="mt-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Website</label>
                    <input type="url" name="website" class="input-field">
                </div>
            </div>

            <!-- Additional Information -->
            <div class="bg-gray-50 rounded-xl p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">
                    <i class="fas fa-info-circle mr-2 text-primary-600"></i>Additional Information
                </h2>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Facilities (comma-separated)</label>
                    <input type="text" name="facilities" placeholder="ICU, X-Ray, Laboratory" class="input-field">
                </div>

                <div class="mt-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Gallery Image URLs (comma-separated)</label>
                    <input type="text" name="gallery_urls" placeholder="http://example.com/image1.jpg, http://example.com/image2.jpg" class="input-field">
                </div>

                <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex items-center space-x-3">
                        <input type="checkbox" name="emergency_status" class="h-5 w-5 text-primary-600 rounded border-gray-300 focus:ring-primary-500">
                        <label class="text-sm text-gray-700">Emergency Services Available</label>
                    </div>
                    
                    <div class="flex items-center space-x-3">
                        <input type="checkbox" name="parking_availability" class="h-5 w-5 text-primary-600 rounded border-gray-300 focus:ring-primary-500">
                        <label class="text-sm text-gray-700">Parking Available</label>
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-4">
                <button type="button" onclick="window.history.back()"
                        class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors duration-200">
                    Cancel
                </button>
                <button type="submit"
                        class="px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors duration-200">
                    Add Hospital
                </button>
            </div>
        </form>
    </div>
</div>